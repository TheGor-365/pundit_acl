<h1 class="text-center text-success display-1">
  Create new user
</h1>

<div class="card shadow p-5 my-5 input-group input-group-lg">
  <%= form_for @user do |f| %>
    <%= f.text_field :login, placeholder: "Login", class: 'form-control-lg' %><br>

    <%= f.password_field :password, placeholder: "Password", class: 'form-control-lg' %><br>
    <%= f.password_field :password_confirmation, placeholder: "Confirm Password", class: 'form-control-lg' %><br>

    <%= f.submit "Create Account", class: 'btn btn-lg btn-outline-success mt-3 px-5' %>
  <% end %>
</div>
