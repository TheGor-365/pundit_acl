<h1 class="text-center text-success display-1">
  Sign in
</h1>

<div class="card shadow p-5 my-5 input-group input-group-lg">
  <%= form_tag sessions_path, local: true do %>
    <%= text_field :login, nil, placeholder: "Login", class: 'form-control-lg' %><br>
    <%= password_field :password, nil, placeholder: "Password", class: 'form-control-lg' %><br>
    <%= submit_tag "Sign in", class: 'btn btn-lg btn-outline-primary mt-3 px-5' %>
  <% end %>
</div>
